<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Hera</title>
        <link rel="stylesheet" href="~/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />

        @await RenderSectionAsync("Styles", required: false)
    </head>
    <body>
        <div class="container">
            <h2>@ViewData["Title"]</h2>

            <ul class="nav nav-tabs">
                <li class='@ViewData["IsDashboardMenuActive"]'><a asp-area="" asp-page="/Index">Dashboard</a></li>
                <li class='@ViewData["IsEmployeeMenuActive"]'><a asp-area="" asp-page="Employee/Index">Employee</a></li>
                <li class='@ViewData["IsOvertimeMenuActive"]'><a asp-area="" asp-page="Overtime/Index">Overtime</a></li>
            </ul>
        </div>

        <div class="container" style="margin-top: 20px;">
            <div id="info-message" class="alert-success">@if (TempData.ContainsKey("InfoMessage")) { @Html.Raw(TempData["InfoMessage"]); }</div>
            <div id="error-message" class="alert-danger">@if (TempData.ContainsKey("ErrorMessage")) { @Html.Raw(TempData["ErrorMessage"]); }</div>
            <br/>
            @RenderBody()
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Hera - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>